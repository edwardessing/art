extends ./partials/_layout

block link
	-var selected = 'home';

block content
	.container
		each post, i in posts
			if i < 6
				.row.gallery(id=post.title style='margin-bottom:40px;')
					a.col-xs-12(href='/' + post.path)
						h3(style='margin:0px')= post.title
						hr
					each image in post.images
						a.col-xs-12.col-sm-4.img(href='/' + image title=image)
							img.img-responsive.img-thumb(src='/' + image alt=image title=image)


		ul.pagination
			li: a(href='/posts') View all