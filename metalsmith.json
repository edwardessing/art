{
	"source": "src",
	"destination": "build",
	"plugins": {
		"metalsmith-define": {
			"blog": {
				"uri": "http://art.edwardessing.com",
				"title": "Edward Essing Art",
				"description": "Edward Essing Art"
			},
			"owner": {
				"uri": "http://edwardessing.com",
				"name": "Edward Essing"
			},
			"moment": "require('moment')"
		},
		"metalsmith-static": {
			"src": "assets",
			"dest": "assets"
		},
		"metalsmith-sharp": {
			"src": "posts/**/images/**/*",
			"namingPattern": "{dir}/thumbs/{name}-thumb{ext}",
			"methods": [
				{
					"name": "resize",
					"args": [ 500 ]
				},
				{
					"name": "quality",
					"args": [ 50 ]
				}
			],
			"moveFile": false
		},
		"metalsmith-collections": {
			"pages": {
				"pattern": "*.md"
			},
			"posts": {
				"pattern": "posts/**/*.md",
				"sortBy": "date",
				"reverse": true
			}
		},
		"metalsmith-pagination": {
			"collections.posts": {
				"perPage": 1,
				"first": "posts/index.html",
				"layout": "posts.pug",
				"path": "posts/:num/index.html",
				"pageMetadata": {
					"title": "posts"
				}
			}
		},
		"metalsmith-project-images": {
			"pattern": "posts/**/*.md",
			"imagesDirectory": "images"
		},
		"metalsmith-move-up": {
			"transforms": [
				{ "pattern": "posts/*/images/*_orig.*", "by": "2"}
			]
		},
		"metalsmith-markdown": {
			"gfm": true,
			"tables": true
		},
		"metalsmith-permalinks": {
			"pattern": ":collection/:title",
			"relative": false
		},
		"metalsmith-layouts": {
			"engine": "pug",
			"directory": "layouts",
			"partials": "partials",
			"default": "post.pug",
			"pattern": "**/*.html"
		},
		"metalsmith-updated": {
			"filePatterns": "posts/*"
		}
	}
}